<form action="/SingIn/Index" method="POST">
    <label for="Log">Логин</label>
    <input id="Log" class="row form-control input-group col-md-3" placeholder="Введите логин" type="text" name="Login"/>
    <br>
    <label for="Pas">Пароль</label>
    <input class="row form-control input-group col-md-3" id="Pas" type="password" name="Password" placeholder="Введите пароль"/>
    <br>
    <input class="btn btn-secondary row text-dark" type="submit" value="Войти"/>
    <a asp-controller="SingIn" asp-action="Registr" class="btn btn-secondary text-dark" style="position: relative; left:20px;">Регистрация</a>
</form>