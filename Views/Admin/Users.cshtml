@{
    List<User> users = ViewBag.Users;
    List<Book> books = ViewBag.Books;
}
<form action="/Admin/Users" method="GET" class="form-inline mt-4">
    <label for="id">Id</label>
    <input type="number" name="Id" id="id" class="form-control input-group col-md-2 mr-2 ml-2" placeholder="Введите id">
    <input type="submit" class="btn btn-secondary text-dark mr-2" value="Найти">
</form>
<table class="table table-bordered table-striped table-hover md-4 mt-4">
    <thead>
        <tr>
            <td>Id</td>
            <td>Фамилия</td>
            <td>Имя</td>
            <td>Количество книг в руках</td>
            <td>Телефон</td>
            <td>Дата рождения</td>
        </tr>
    </thead>
    <tbody>
        @if(users.Count>0)
        {
            @foreach (var item in users)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@books.Where(p =>p.UserId == item.Id).Count()</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.BirthDate.ToString().Substring(0,10)</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="text-center" colspan="6">Список пуст</td>
            </tr>
        }
    </tbody>
</table>